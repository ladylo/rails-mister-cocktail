
<h1>Cocktail Details</h1>
<p><%= @cocktail.name %></p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> : <%= dose.ingredient.name %></li>
    <%= link_to "Delete", doses_delete_path(dose), method: :delete, class: 'btn btn-primary'%>
  <% end %>
</ul>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'%>
